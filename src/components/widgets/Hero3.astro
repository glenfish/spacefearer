---
import { Icon } from 'astro-icon';
import { Picture } from '@astrojs/image/components';

interface CallToAction {
  text: string;
  href: string;
  icon?: string;
}

export interface Props {
  title?: string;
  subtitle?: string;
  callToAction?: string | CallToAction;
  callToAction2?: string | CallToAction;
  image?: string | any; // TODO: find HTMLElementProps
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  content = await Astro.slots.render('content'),
  callToAction = await Astro.slots.render('callToAction'),
  callToAction2 = await Astro.slots.render('callToAction2'),
  image = await Astro.slots.render('image'),
} = Astro.props;
---

<div id="starfield" class="w-full herocontainer">
  <!-- <span id="title">GOT CRYPTO?</span> -->
  <div id="crypto-canvas">
    <div id="btc" class="float-9"></div>
    <div id="aave" class=""></div>
    <div id="ada" class="rotate-1"></div>
    <div id="cspr" class="float-7"></div>
    <div id="mana" class="float-1"></div>
    <div id="doge" class="float-1"></div>
    <div id="eth" class="float-8"></div>
    <div id="ltc" class="float-1"></div>
    <div id="xmr" class="float-2"></div>
    <div id="shib" class="float-9"></div>
    <div id="sol" class="float-1"></div>
    <div id="usd" class="float-7"></div>
  </div>
  <div id="starcontent">
    <div id="stars"></div>
    <div id="stars2"></div>
    <div id="stars3"></div>
  </div>
  <div id="starcontent2">
    <div id="stars3"></div>
    <div id="stars2"></div>
    <div id="stars1"></div>
  </div>

  <div class="flex-container" id="">
    <div style=" " class="floating" id="spaceman-1">
      <img
        src="/images/astronaught.png"
        style="z-index:2001; height:auto; width:100%;  transform: rotate(230deg); position:relative;"
        class=""
      />
    </div>

    <!-- start regular hero code  -->

    <section style="z-index:900" id="herosection" class="relative">
      <div class="absolute inset-0" aria-hidden="true"></div>
      <div class="relative max-w-screen-xl mx-auto px-4 sm:px-6">
        <div class="pt-0 md:pt-[76px]"></div>
        <div class="py-12 md:py-0">
          <div id="herosection-bgnd" class="text-center pb-10 md:pb-16 max-w-screen-lg mx-auto">
            {
              title && (
                <>
                  <h1
                    id="hero-title-1"
                    class="text-5xl min-[1400px]:text-[90px] max-[1535px]:text-7xl  min-[1536px]:text-7xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200"
                    set:html={title}
                  />
                  <h1
                    id="hero-title-2"
                    class="text-2xl  font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200"
                    set:html={title}
                  />
                </>
              )
            }
            <div class="max-w-3xl mx-auto">
              {subtitle && <p class="text-xl text-muted mb-6 dark:text-slate-300" set:html={subtitle} />}
              <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-0">
                {
                  callToAction && (
                    <div class="flex w-full sm:w-auto">
                      {typeof callToAction === 'string' ? (
                        <Fragment set:html={callToAction} />
                      ) : (
                        <a
                          id="protect-your-crypto"
                          class="btn btn-primary sm:mb-0 w-full text-white dark:text-white"
                          href={callToAction?.href}
                          target="_blank"
                          rel="noopener"
                        >
                          {callToAction?.icon && (
                            <>
                              <Icon name={callToAction.icon} class="w-5 h-5 mr-1 -ml-1.5" />{' '}
                            </>
                          )}
                          {callToAction?.text}
                        </a>
                      )}
                    </div>
                  )
                }
                {
                  callToAction2 && (
                    <div style="z-index:900" class="flex w-full sm:w-auto">
                      {typeof callToAction2 === 'string' ? (
                        <Fragment set:html={callToAction2} />
                      ) : (
                        <a
                          id="how-it-works"
                          style="z-index:900"
                          class="btn w-full bg-gray-800/30 text-white hover:text-gray-800 dark:text-white"
                          href={callToAction2?.href}
                        >
                          {callToAction2?.icon && (
                            <>
                              <Icon name={callToAction2.icon} class="w-5 h-5 mr-1 -ml-1.5" />{' '}
                            </>
                          )}
                          {callToAction2.text}
                        </a>
                      )}
                    </div>
                  )
                }
              </div>
            </div>
            {content && <Fragment set:html={content} />}
          </div>
          <!-- <div>
        {
          image && (
            <div class="relative m-auto max-w-5xl">
              {typeof image === 'string' ? (
                <Fragment set:html={image} />
              ) : (
                <Picture
                  class="mx-auto rounded-md w-full"
                  widths={[400, 768, 1024, 2040]}
                  sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
                  aspectRatio={1024 / 576}
                  loading="eager"
                  width={1024}
                  height={576}
                  {...image}
                />
              )}
            </div>
          )
        }
      </div> -->
          <!-- <span class="text-white/70 text-sm leading-10 text-center">* based on a true story :)</span> -->
        </div>
      </div>
    </section>

    <!-- end regular hero code  -->
  </div>
</div>
